<Page x:Class="PROJECTEMTRANCE.Views.Pages.Home.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROJECTEMTRANCE.Views.Pages.Home"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <!-- Глобальный стэк -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <!-- Стэк Интерфейса -->
            <StackPanel Orientation="Horizontal">

                <!-- Стэк TextBox -->
                <StackPanel>
                    
                    <TextBox x:Name="tbLogin"
                             Width="250"
                              materialDesign:HintAssist.Hint="login" 
                              Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
                    <PasswordBox x:Name="psbPassword"></PasswordBox>
                    
                </StackPanel>

                
                <!-- Стэк Button -->
                <StackPanel>
                    
                    <Button></Button>
                    <Button></Button>

                </StackPanel>
    


            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
